include ../../mixins/alert.pug


doctype html
html
    head
        link(rel="stylesheet", href="/admin/css/style.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    body
        +alert-flash(messages.error)
        form(action="/admin/auth/login", method="post", style="display:flex; flex-direction:column; border:solid 2px; width:40vw; height: 50vh; margin-left:auto; margin-right:auto")
            h2 Đăng Nhập
            label(for="e") Email
            br
            input(type="email", name="email", id="e")
            br
            label(for="p") Mật khẩu
            br
            .password-container(style="position: relative;")
                input(type="password", name="password", id="p", style="padding-right: 30px;")
                span.toggle-password(style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%);") 👁️
            br
            button(type="submit") Đăng nhập
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
        script.
            document.querySelector('.toggle-password').onclick = () => {
                const passwordInput = document.getElementById('p');
                const togglePasswordIcon = document.querySelector('.toggle-password');

                if (passwordInput.type === 'password') {
                    passwordInput.type = 'text';
                    togglePasswordIcon.textContent = '🙈';
                } else {
                    passwordInput.type = 'password';
                    togglePasswordIcon.textContent = '👁️';
                }
            }
