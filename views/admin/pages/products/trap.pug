extend ../../layouts/default.pug
include ../../mixins/statusChange.pug
block main
    if(role.permissions.includes("DSSP_XOA"))
        .card.mb-3 
            .card-header Danh sách sản phẩm
            .card-body
                table.table.table-hover.table-sm 
                    thead 
                        tr 
                            th Stt
                            th Image
                            th Name
                            th Price
                            th Status
                            th Action
                    tbody 
                        -for(var i = 0; i<data.length; i++)
                            tr 
                                td #{i+1}
                                td 
                                    img(src=data[i].thumbnail alt = data[i].title width="100px" height="auto")
                                td #{data[i].title}
                                td #{data[i].price}
                                +changeOneStatus(data)
                                td 
                                    button(class="btn btn-danger", delete-F-button, id=data[i].id) xóa vĩnh viễn
                                    button(class="btn btn-success", restore, id=data[i].id ) Khôi phục
                form(action="", method="post", prefix = prefix, id="form-trap")
        script(src="/admin/js/trap.js")